{
  "name": "tutorial",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "start": "NODE_ENV=production bun src/index.ts",
    "build": "bun run tsc && bun run build.ts --minify",
    "build:dev": "bun run tsc && bun run build.ts",
    "tsc": "tsc --noEmit",
    "deploy": "wrangler pages deploy dist/ --project-name tsuzuri-tutorial"
  },
  "dependencies": {
    "bun-plugin-tailwind": "^0.1.2",
    "react": "^19",
    "react-dom": "^19",
    "tailwindcss": "^4.1.11",
    "@ichi-h/tsuzuri-driver": "workspace:*",
    "@ichi-h/tsuzuri-core": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "wrangler": "^4.54.0"
  }
}
